{
    "scopeName": "source.cython",
    "patterns": [
        { "include": "#keywords" },
		{ "include": "#lvariables" }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
					"comment": "other keywords",
					"name": "keyword.other.cython",
					"match": "\\b(use|pub|extern|fn|let|enum|struct|union|const|static|loop|auto|as|from|return)\\b"
				}
            ]
        },
        "lvariables": {
			"patterns": [
				{
					"comment": "self",
					"name": "variable.language.self.cython",
					"match": "\\b[Ss]elf\\b"
				},
				{
					"comment": "super",
					"name": "variable.language.super.cython",
					"match": "\\bsuper\\b"
				}
			]
		}
    }
}
