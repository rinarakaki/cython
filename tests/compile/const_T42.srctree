######## test.pyx ########

# distutils: language = c++

extern from "test.h":
    struct c_Test "Test":
        const char* get_string() except +RuntimeError

struct Test:
    r&mut c_Test thisptr

impl Test:
    fn get_string(self):
        return self.thisptr.get_string()

######## test.h ########

static const char* astring = "123";
class Test {
public:
    const char* getString(void) { return astring; }
};

